generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now()) @db.Date
  likes     BigInt   @default(0)
  slug      String
  views     BigInt   @default(0)
}

model Session {
  id        String   @id @map("_id")
  createdAt DateTime @default(now()) @db.Date
  likes     BigInt   @default(0)
}
